    </Window.Resources>
    <Window.DataContext>
        <viewmodels:MainViewModel />
    </Window.DataContext>

    <Grid>

        <Grid.RowDefinitions>
            <RowDefinition Height="100" />
            <RowDefinition />

        </Grid.RowDefinitions>

        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*" />
            <ColumnDefinition Width="*" />
            <ColumnDefinition Width="*" />

        </Grid.ColumnDefinitions>

        <TextBlock
            Grid.Column="1"
            VerticalAlignment="Center"
            FontFamily="Cascadia Code"
            FontSize="24"
            Foreground="#2E2E2F"
            TextAlignment="Center">
            Bokhandel
        </TextBlock>

        <StackPanel
            Grid.Row="1"
            Grid.Column="0"
            Margin="50,0,0,0"
            HorizontalAlignment="Left"
            Width="200">

            <TextBlock
                Margin="0,0,0,5"
                FontFamily="Cascadia Code SemiLight"
                FontSize="16"
                Text="Välj butik"
                TextAlignment="Center" />

            <ListView
                Height="250"
                Background="#5584AC"
                ItemsSource="{Binding Butiker}"
                SelectedItem="{Binding SelectedButik}">
                <ItemsControl.ItemTemplate>
                    <DataTemplate>
                        <TextBlock Text="{Binding Butiksnamn}" />
                    </DataTemplate>
                </ItemsControl.ItemTemplate>
            </ListView>

        </StackPanel>

        <StackPanel Grid.Row="1" Grid.Column="1" Margin="0 0 20 0">

            <TextBlock
                Margin="0,0,0,5"
                FontFamily="Cascadia Code SemiLight"
                FontSize="16"
                TextAlignment="Center">
                Böcker
            </TextBlock>

            <ListView
                Height="250"
                Background="#E4B5B5"
                ItemsSource="{Binding Böcker}"
                SelectedItem="{Binding SelectedBok}">
                <ItemsControl.ItemTemplate>
                    <DataTemplate>
                        <TextBlock Text="{Binding Titel}" />

                    </DataTemplate>
                </ItemsControl.ItemTemplate>
            </ListView>

            <StackPanel
                Grid.Row="1"
                Grid.Column="1"
                Margin="0,15"
                Orientation="Horizontal">
                <TextBlock Margin="10,10" TextAlignment="Center">Antal</TextBlock>
                <TextBox
                    Margin="5 0 "
                    Width="100"
                    Height="25"
                    Padding="3"
                    Text="{Binding Lagersaldo.Antal, UpdateSourceTrigger=PropertyChanged}"
                    TextAlignment="Center" />

                <Button
                    Width="90"
                    Height="30"
                    Margin="5 0"
                    Command="{Binding RemoveBookCommand}"
                    Style="{DynamicResource RaderaStyle2}" FontFamily="Segoe UI Semibold" Foreground="#2E2E2F">
                    Radera
                </Button>

            </StackPanel>

        </StackPanel>

        <StackPanel Grid.Row="1" Grid.Column="2" Margin="0 0 20 0">

            <TextBlock
                Margin="0,0,0,5"
                FontFamily="Cascadia Code SemiLight"
                FontSize="16"
                TextAlignment="Center">
                Alla böcker
            </TextBlock>

            <ListView
                Height="250"
                Background="#FFD5AB"
                ItemsSource="{Binding AllaBöcker}"
                SelectedItem="{Binding SelectedBok}">
                <ItemsControl.ItemTemplate>
                    <DataTemplate>
                        <TextBlock Text="{Binding Titel}" />

                    </DataTemplate>
                </ItemsControl.ItemTemplate>
            </ListView>

            <Button
                Width="90"
                Height="30"
                Margin="0,18"
                Command="{Binding AddBookCommand}"
                FontFamily="Segoe UI Semibold"
                Foreground="#2E2E2F"
                Style="{DynamicResource ButtonStyle1}">
                Lägg till
            </Button>

        </StackPanel>

    </Grid>
</Window>
